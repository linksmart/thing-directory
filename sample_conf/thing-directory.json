{
  "description": "LinkSmart Thing Directory",
  "validation": {
    "jsonSchemas": []
  },
  "storage": {
    "type": "leveldb",
    "dsn": "./data"
  },
  "dnssd": {
    "publish": {
      "enabled": false,
      "instance": "LinkSmart Thing Directory",
      "domain": "local.",
      "interfaces": []
    }
  },
  "serviceCatalog": null,
  "http": {
    "publicEndpoint": "http://fqdn-of-the-host:8081",
    "bindAddr": "0.0.0.0",
    "bindPort": 8081,
    "tls": {
      "enabled": false,
      "keyFile": "./tls/key.pem",
      "certFile": "./tls/cert.pem"
    },
    "auth": {
      "enabled": true,
      "provider": "keycloak",
      "providerURL": "https://provider-url",
      "clientID": "sampleTD",
      "basicEnabled": false,
      "authorization": {
        "enabled": true,
        "rules": [
          {
            "paths": ["/td"],
            "methods": ["GET","POST", "PUT", "DELETE"],
            "users": ["admin"],
            "groups": [],
            "roles": [],
            "clients": [],
            "excludePathSubstrings": []
          },
          {
            "paths": ["/td"],
            "methods": ["GET"],
            "users": [],
            "groups": ["anonymous"],
            "roles": [],
            "clients": [],
            "excludePathSubstrings": []
          }
        ]
      }
    }
  }
}
{
  "description": "Standalone Device/Resource Catalog",
  "dnssdEnabled": true,
  "publicEndpoint": "http://fqdn-of-the-host:8081",
  "bindAddr": "0.0.0.0",
  "bindPort": 8081,
  "apiLocation": "/rc",
  "staticDir": "./static",
  "storage": {
    "type": "memory"
  },
  "serviceCatalog": [
    {
      "discover": false,
      "endpoint": "http://localhost:8082/sc",
      "ttl": 120,
      "auth": {
        "serverAddr": "http://cas-server-addr:8000/cas",
        "username": "username",
        "password": "password",
        "serviceID": "scID"
      }
    }
  ],
  "auth": {
    "enabled": true,
    "serverAddr": "http://cas-server-addr:8000/cas",
    "serviceID": "rcID",
    "authorization": {
		"enabled": true,
		"rules": [
	      {
	        "resources": ["/rc"],
	        "methods": ["GET", "POST", "PUT", "DELETE"],
	        "users": [],
	        "groups": ["rwusers"]
	      }
    		]
	}
  }
}
